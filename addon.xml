<?xml version="1.0" encoding="UTF-8"?>
<addon
        id="plugin.video.animeavenue"
        version="1.4"
        name="AnimeAvenue"
        provider-name="Martin Martimeo">

    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.common.plugin.cache" version="0.9.1"/>
        <import addon="script.module.requests" version="1.1.0"/>
        <import addon="script.module.urlresolver" version="2.0.9"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="animeavenue.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <language>en</language>
        <platform>all</platform>
        <summary lang="de">Anime Videos von AnimeAvenue.net</summary>
        <summary lang="en">Anime streams from AnimeAvenue.net</summary>
        <description lang="en">
            Provides Episodes from AnimeAvenue.net
        </description>
        <disclaimer lang="en">
            This plugin is just a proxy to AnimeAvenue.net to be handy and free to use.
            Please do not bother AnimeAvenue Admins with questions to this plugin, use github issues
        </disclaimer>
        <source>https://github.com/MartinMartimeo/xbmc-plugin-animeavenue</source>
    </extension>
</addon>
